
@model List<Report>
@{
    ViewData["Title"] = "Sales";
}

<h1>@ViewData["Title"]</h1>

<head>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>

@using (Html.BeginForm("SalesFilter", "Report", FormMethod.Post))
{
    <div>
        <label for="CustomerFilter">Customer Name:</label>
        <input type="text" name="CustomerFilter" id="CustomerFilter" value="@ViewBag.CustomerFilter">
        <br>
        <label for="QuantityFilter">Quantity:</label>
        <input type="text" name="QuantityFilter" id="QuantityFilter" value="@ViewBag.QuantityFilter">
        <br>
        <label for="RegionFilter">Region:</label>
        <input type="text" name="RegionFilter" id="RegionFilter" value="@ViewBag.RegionFilter">
        <br>
        <label for="productFilter">Product Name:</label>
        <input type="text" name="productFilter" id="productFilter" value="@ViewBag.ProductFilter">
        <br>
        <input type="submit"
               value="Apply" />
    </div>
}

<table style="border: 1px solid black; border-collapse: collapse; width: 70%">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Quantity</th>
            <th>Region</th>
            <th>Product Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Customer_Name</td>
                <td>@item.Quantity</td>
                <td>@item.Region</td>
                <td>@item.Product_Name</td>
            </tr>
        }
    </tbody>
</table>